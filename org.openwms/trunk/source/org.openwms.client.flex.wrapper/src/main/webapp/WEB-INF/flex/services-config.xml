<services-config>

    <services>
        <service
            id="granite-service" 
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">
            <destination id="locationService">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>locationService</source>
                </properties>
            </destination>
            <destination id="locationGroupService">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>locationGroupService</source>
                </properties>
            </destination>
            <destination id="userService">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>userService</source>
                </properties>
            </destination>
            <destination id="transportUnitService">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>transportUnitService</source>
                </properties>
            </destination>
            <destination id="moduleManagementService">
                <channels>
                    <channel ref="my-graniteamf" />
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>moduleManagementService</source>
                </properties>
            </destination>
            <destination id="transportService">
                <channels>
                    <channel ref="my-graniteamf" />
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>transportService</source>
                </properties>
            </destination>
        </service>
    </services>
    
    <factories>
        <factory id="springFactory"
            class="org.granite.spring.SpringServiceFactory" />
    </factories>

    <channels>
        <channel-definition id="my-graniteamf" class="mx.messaging.channels.AMFChannel">
            <endpoint
                uri="http://{server.name}:{server.port}/{context.root}/graniteamf/amf"
                class="flex.messaging.endpoints.AMFEndpoint"/>
        </channel-definition>
    </channels>

</services-config>

